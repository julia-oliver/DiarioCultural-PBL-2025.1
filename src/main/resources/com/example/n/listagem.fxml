<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<!-- Estrutura principal do layout: BorderPane com estilos definidos e controlador associado -->
<BorderPane styleClass="cadastro-container" stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.n.controllerjavafx.ListadorJavaFX">

    <!-- Topo da interface, com um título centralizado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 15;">
            <Label style="-fx-text-fill: #738098; -fx-font-size: 20pt; -fx-font-weight: bold;" text="Listagem de Itens" />
        </HBox>
    </top>

    <!-- Conteúdo central da interface -->
    <center>
        <!-- Componente com abas (uma para cada tipo de item: livros, filmes, séries) -->
        <TabPane tabClosingPolicy="UNAVAILABLE" styleClass="custom-tab-pane">
            <tabs>
                <!-- Aba de Livros -->
                <Tab text="Livros" style="-fx-font-family: 'Gloock'; -fx-font-weight: bold;" styleClass="custom-tab">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 20;">

                            <!-- Filtro de busca -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label styleClass="textocadastro" text="Filtrar por:"/>
                                <ComboBox fx:id="comboFiltroLivros" styleClass="caixacadastro" prefWidth="150"/>
                                <TextField fx:id="campoFiltroLivros" styleClass="caixacadastro" prefWidth="200" promptText="Digite o filtro"/>
                                <Button onAction="#filtrarLivros" styleClass="botoescadastro" text="Aplicar"/>
                            </HBox>

                            <!-- Tabela de visualização dos livros -->
                            <TableView fx:id="tabelaLivros" styleClass="table-view" prefHeight="600">
                                <!-- Colunas definidas dinamicamente no controller -->
                            </TableView>

                            <!-- Botão para voltar à tela anterior -->
                            <Button onAction="#handleVoltar" styleClass="botoescadastro" text="Voltar"/>
                        </VBox>
                    </content>
                </Tab>

                <!-- Aba de Filmes -->
                <Tab text="Filmes" style="-fx-font-family: 'Gloock'; -fx-font-weight: bold;" styleClass="custom-tab">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 20;">

                            <!-- Filtro de busca -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label styleClass="textocadastro" text="Filtrar por:"/>
                                <ComboBox fx:id="comboFiltroFilmes" styleClass="caixacadastro" prefWidth="150"/>
                                <TextField fx:id="campoFiltroFilmes" styleClass="caixacadastro" prefWidth="200" promptText="Digite o filtro"/>
                                <Button onAction="#filtrarFilmes" styleClass="botoescadastro" text="Aplicar"/>
                            </HBox>

                            <!-- Tabela de visualização dos filmes -->
                            <TableView fx:id="tabelaFilmes" styleClass="table-view" prefHeight="600">
                                <!-- Colunas definidas dinamicamente no controller -->
                            </TableView>

                            <!-- Botão para voltar à tela anterior -->
                            <Button onAction="#handleVoltar" styleClass="botoescadastro" text="Voltar"/>
                        </VBox>
                    </content>
                </Tab>

                <!-- Aba de Séries -->
                <Tab text="Séries" style="-fx-font-family: 'Gloock'; -fx-font-weight: bold;" styleClass="custom-tab">
                    <content>
                        <VBox spacing="10" style="-fx-padding: 20;">

                            <!-- Filtro de busca -->
                            <HBox spacing="10" alignment="CENTER_LEFT">
                                <Label styleClass="textocadastro" text="Filtrar por:"/>
                                <ComboBox fx:id="comboFiltroSeries" styleClass="caixacadastro" prefWidth="150"/>
                                <TextField fx:id="campoFiltroSeries" styleClass="caixacadastro" prefWidth="200" promptText="Digite o filtro"/>
                                <Button onAction="#filtrarSeries" styleClass="botoescadastro" text="Aplicar"/>
                            </HBox>

                            <!-- Tabela de visualização das séries -->
                            <TableView fx:id="tabelaSeries" styleClass="table-view" prefHeight="600">
                                <!-- Colunas definidas dinamicamente no controller -->
                            </TableView>

                            <!-- Botão para voltar à tela anterior -->
                            <Button onAction="#handleVoltar" styleClass="botoescadastro" text="Voltar"/>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>