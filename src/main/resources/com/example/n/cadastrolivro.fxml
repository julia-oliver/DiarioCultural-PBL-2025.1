<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<!-- Layout principal da tela -->
<BorderPane styleClass="cadastro-container"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.n.controllerjavafx.LivroControllerJavaFX">

    <!-- Topo com o título da tela -->
    <top>
        <HBox alignment="CENTER" style=" -fx-padding: 15;">
            <Label text="Cadastro de Livros"
                   style="-fx-text-fill: #738098; -fx-font-size: 20pt; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Centro da tela com formulário rolável -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <GridPane alignment="CENTER" hgap="10" vgap="10" prefWidth="1470.0" prefHeight="436.0">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                <!-- Linha 1: Título -->
                <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"
                           styleClass="caixacadastro"/>

                <!-- Linha 2: Autor e Editora -->
                <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtAutor" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           styleClass="caixacadastro"/>

                <Label text="Editora:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtEditora" GridPane.columnIndex="3" GridPane.rowIndex="1"
                           styleClass="caixacadastro"/>

                <!-- Linha 3: ISBN e Ano de Publicação -->
                <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtISBN" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           styleClass="caixacadastro"/>

                <Label text="Ano de Publicação:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtAnoPublicacao" GridPane.columnIndex="3" GridPane.rowIndex="2"
                           styleClass="caixacadastro"/>

                <!-- Linha 4: Gênero -->
                <Label text="Gênero:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       styleClass="textocadastro"/>
                <TextField fx:id="txtGenero" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"
                           styleClass="caixacadastro"/>

                <!-- Linha 5: Possui Exemplar -->
                <Label text="Possui Exemplar?" GridPane.columnIndex="0" GridPane.rowIndex="4"
                       styleClass="textocadastro"/>
                <RadioButton fx:id="rbPossuiExemplar" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Linha 6: Botões -->
                <HBox alignment="CENTER" spacing="20" GridPane.columnSpan="4" GridPane.rowIndex="5">
                    <Button text="Cadastrar" onAction="#handleCadastrarLivro" styleClass="botoescadastro"/>
                    <Button text="Voltar" onAction="#handleXbuttonmenu" styleClass="botoescadastro"/>
                </HBox>

                <!-- Definições opcionais de layout -->
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>
