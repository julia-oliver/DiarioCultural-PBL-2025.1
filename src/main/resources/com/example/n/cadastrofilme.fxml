<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<!-- Layout principal com estilo e controlador definido -->
<BorderPane styleClass="cadastro-container"
            stylesheets="@style.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.n.controllerjavafx.FilmeControllerJavaFX">

    <!-- Topo da tela com título centralizado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 15;">
            <Label style="-fx-text-fill: #738098; -fx-font-size: 20pt; -fx-font-weight: bold;"
                   text="Cadastro de Filmes" />
        </HBox>
    </top>

    <!-- Centro com formulário em ScrollPane para rolagem -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <GridPane alignment="CENTER"
                      hgap="10"
                      vgap="10"
                      prefWidth="1470.0"
                      prefHeight="562.0"
                      style="-fx-padding: 30;">
                <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

                <!-- Linha 1: Título -->
                <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="3"
                           styleClass="caixacadastro"/>

                <!-- Linha 2: Gênero e Ano -->
                <Label text="Gênero:" GridPane.columnIndex="0" GridPane.rowIndex="1"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtGenero" GridPane.columnIndex="1" GridPane.rowIndex="1"
                           styleClass="caixacadastro"/>

                <Label text="Ano de Lançamento:" GridPane.columnIndex="2" GridPane.rowIndex="1"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtAnoLancamento" GridPane.columnIndex="3" GridPane.rowIndex="1"
                           styleClass="caixacadastro"/>

                <!-- Linha 3: Duração e Direção -->
                <Label text="Duração (min):" GridPane.columnIndex="0" GridPane.rowIndex="2"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtDuracao" GridPane.columnIndex="1" GridPane.rowIndex="2"
                           styleClass="caixacadastro"/>

                <Label text="Direção:" GridPane.columnIndex="2" GridPane.rowIndex="2"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtDirecao" GridPane.columnIndex="3" GridPane.rowIndex="2"
                           styleClass="caixacadastro"/>

                <!-- Linha 4: Roteiro -->
                <Label text="Roteiro:" GridPane.columnIndex="0" GridPane.rowIndex="3"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtRoteiro" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"
                           styleClass="caixacadastro"/>

                <!-- Linha 5: Elenco -->
                <Label text="Elenco:" GridPane.columnIndex="0" GridPane.rowIndex="4"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtElenco" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="3"
                           styleClass="caixacadastro"/>

                <!-- Linha 6: Título Original e Onde Assistir -->
                <Label text="Título Original:" GridPane.columnIndex="0" GridPane.rowIndex="5"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtTituloOriginal" GridPane.columnIndex="1" GridPane.rowIndex="5"
                           styleClass="caixacadastro"/>

                <Label text="Onde Assistir:" GridPane.columnIndex="2" GridPane.rowIndex="5"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <TextField fx:id="txtOndeAssistir" GridPane.columnIndex="3" GridPane.rowIndex="5"
                           styleClass="caixacadastro"/>

                <!-- Linha 7: Assistido -->
                <Label text="Já assistiu?" GridPane.columnIndex="0" GridPane.rowIndex="6"
                       styleClass="textocadastro" style="-fx-font-weight: bold;"/>
                <RadioButton fx:id="rbAssistido" text="Sim" GridPane.columnIndex="1" GridPane.rowIndex="6"
                             styleClass="textocadastro"/>

                <!-- Linha 8: Botões de ação -->
                <HBox alignment="CENTER" spacing="20"
                      GridPane.rowIndex="7" GridPane.columnSpan="4">
                    <Button text="Cadastrar" onAction="#handleCadastrarFilme" styleClass="botoescadastro"/>
                    <Button text="Voltar" onAction="#handleXbuttonmenu" styleClass="botoescadastro"/>
                </HBox>

                <!-- Definições de colunas e linhas (opcional, aqui apenas placeholders) -->
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
        </ScrollPane>
    </center>
</BorderPane>
